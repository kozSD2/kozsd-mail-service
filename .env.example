# Environment Configuration for KozSD Mail Service
# Copy this file to .env and update the values for your environment

# Application
NODE_ENV=development
PORT=3002

# Database
DATABASE_URL=postgresql://kozsd:kozsd123@localhost:5432/kozsd_mail_service

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Secrets (CHANGE THESE IN PRODUCTION!)
JWT_ACCESS_SECRET=kozsd-mail-access-secret-key-2024-change-in-production
JWT_REFRESH_SECRET=kozsd-mail-refresh-secret-key-2024-change-in-production
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# MinIO Object Storage
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_USE_SSL=false
MINIO_ACCESS_KEY=kozsd-mail-minio
MINIO_SECRET_KEY=kozsd-mail-minio-secret-2024-change-in-production
MINIO_BUCKET_NAME=kozsd-mail-attachments

# Email SMTP Configuration
EMAIL_FROM=noreply@kozsd-mail.com
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=kozsd-mail
SMTP_PASS=kozsd-mail-2024

# Encryption (CHANGE THESE IN PRODUCTION!)
ENCRYPTION_KEY=kozsd-mail-encryption-key-32-chars
ENCRYPTION_IV=kozsd-mail-iv-16

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000,http://127.0.0.1:3001

# File Upload Limits
MAX_FILE_SIZE=26214400
MAX_FILES_PER_EMAIL=10
MAX_TOTAL_ATTACHMENT_SIZE=104857600

# Rate Limiting
RATE_LIMIT_WINDOW_MS=3600000
RATE_LIMIT_NORMAL_USER=50
RATE_LIMIT_EDU_USER=200
RATE_LIMIT_ADMIN_USER=1000

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=10485760
LOG_FILE_MAX_FILES=5