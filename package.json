{
  "name": "kozsd-mail-service",
  "version": "1.0.0",
  "private": true,
  "description": "KozSD Mail Service - Comprehensive Email Platform with Frutiger Aero Design, Educational Focus, and Advanced Security Features",
  "workspaces": [
    "backend",
    "frontend",
    "admin",
    "shared"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\" \"npm run dev:admin\"",
    "dev:backend": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:admin": "cd admin && npm run dev",
    "build": "npm run build:shared && npm run build:backend && npm run build:frontend && npm run build:admin",
    "build:shared": "cd shared && npm run build",
    "build:backend": "cd backend && npm run build",
    "build:frontend": "cd frontend && npm run build",
    "build:admin": "cd admin && npm run build",
    "test": "npm run test:backend && npm run test:frontend && npm run test:admin",
    "test:backend": "cd backend && npm test",
    "test:frontend": "cd frontend && npm test",
    "test:admin": "cd admin && npm test",
    "lint": "npm run lint:backend && npm run lint:frontend && npm run lint:admin",
    "lint:backend": "cd backend && npm run lint",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:admin": "cd admin && npm run lint",
    "lint:fix": "npm run lint:fix:backend && npm run lint:fix:frontend && npm run lint:fix:admin",
    "lint:fix:backend": "cd backend && npm run lint:fix",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:admin": "cd admin && npm run lint:fix",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "db:migrate": "cd backend && npx prisma migrate dev",
    "db:generate": "cd backend && npx prisma generate",
    "db:studio": "cd backend && npx prisma studio",
    "db:seed": "cd backend && npm run seed",
    "clean": "npm run clean:backend && npm run clean:frontend && npm run clean:admin",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "clean:frontend": "cd frontend && rm -rf dist node_modules",
    "clean:admin": "cd admin && rm -rf dist node_modules",
    "install:all": "npm install && npm run install:workspaces",
    "install:workspaces": "npm install --workspaces"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "@types/node": "^20.10.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "email",
    "mail-service",
    "kozsd",
    "frutiger-aero",
    "pwa",
    "react",
    "nodejs",
    "typescript",
    "postgresql",
    "redis",
    "minio",
    "educational"
  ],
  "author": "KozSD",
  "license": "MIT"
}